{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Linux g++ build zpaq executable",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "zpaq.cpp",
                "libzpaq.cpp",
                "-pthread",
                "-o",
                "${fileDirname}/zpaq"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Win cl.exe build release",
            "command": "cl.exe",
            "args": [
                "/DWIN32",
                "/D_WINDOWS",
                "/W3",
                "/GR",
                "/EHsc",

                "/MD",
                "/O2",
                "/Ob2",
                "/DNDEBUG",

                "zpaq.cpp",
                "libzpaq.cpp",
                "advapi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe"
        },
        {
            "type": "cppbuild",
            "label": "Win cl.exe build and debug",
            "command": "cl.exe",
            "args": [
                "/DWIN32",
                "/D_WINDOWS",
                "/W3",
                "/GR",
                "/EHsc",

                "/MDd",
                "/Zi",
                "/Ob0",
                "/Od",
                "/RTC1",

                "zpaq.cpp",
                "libzpaq.cpp",
                "advapi32.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe"
        }
    ],
    "version": "2.0.0"
}